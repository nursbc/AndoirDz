<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_activity_registered_user_info_user_selfie"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/edittext_activity_registered_user_info_user_first_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:maxLines="1"
        android:inputType="text"
        android:hint="@string/activity_user_registration_edittext_first_name_hint"/>

    <EditText
        android:id="@+id/edittext_activity_registered_user_info_user_surname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="1"
        android:inputType="text"
        android:hint="@string/activity_user_registration_edittext_surname_hint"/>

</LinearLayout>