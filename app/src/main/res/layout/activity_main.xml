<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext_mainactivity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"/>

    <EditText
        android:id="@+id/edittext_mainactivity_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_mainactivity_name"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"/>

    <TextView
        android:id="@+id/textview_mainactivity_showtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Отабражение"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_mainactivity_password"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_mainaactivity_visibilitybutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_mainactivity_visibility"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_mainactivity_showtext"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_mainaactivity_CheckFields"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_mainactivity_CheckFields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_mainaactivity_visibilitybutton"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="6dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>